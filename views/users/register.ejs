    <title>Document</title>
</head>
<body>


<!-------->

<div class="container-fluid containerRegister">


  <h1>Card Flip with Text</h1>
  <%- include('../alert/alert')%>  
<div class="flip-card mx-auto">
  <div class="flip-card-inner">
    <div class="flip-card-front">
      <img src="/image/image.webp" alt="Avatar" style="width:100%;height: 100%;">
    </div>
    <div class="flip-card-back">
     
    <form action="/register" method="POST">

      <div class="form-row">

        <div class="col">
          <label for="colFormLabelSm" >First name</label>
           <input type="text" name="firstname" class="form-control" placeholder="First name">
        </div>

        <div class="col">
          <label for="colFormLabelSm" >Last name</label>
           <input type="text" name="lastname" class="form-control" placeholder="Last name">
        </div>

      </div>
      
      <!--<br>class="col-sm-3 col-form-label col-form-label-sm"--> 
      
      <div class="form-row">

        <div class="col">
          <label for="colFormLabelSm" class="col-sm-2 col-form-label col-form-label-sm">Password</label>
           <input type="password" name="password1"   class="form-control" placeholder="Password">
        </div>

        <div class="col">
          <label for="colFormLabelSm" class="col-sm-2 col-form-label col-form-label-sm">Password</label>
           <input type="password" name="password2"  class="form-control" placeholder="Return Password">
        </div>

      </div>
     
      <div class="form-group">
        <label for="colFormLabelSm" class="col-sm-2 col-form-label col-form-label-sm">Email</label>
     
          <input type="email" name="email"  class="form-control" id="colFormLabelSm" placeholder="@Email">
     
      </div>

      <div class="form-group">
       
     
          <input type="submit" class="btn btn-outline-info btn-block" value="Submit">
     
      </div>
    </form>
    </div>
  </div>
</div>







</div>













<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
